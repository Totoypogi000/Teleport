local DiscordCorner = Instance.new("UICorner", DiscordButton)
DiscordCorner.CornerRadius = UDim.new(0,6)

DiscordButton.MouseButton1Click:Connect(function()
    setclipboard("https://discord.gg/j5J9MDqY")
end)
